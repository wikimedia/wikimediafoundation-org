{
  "name": "shiro-wordpress-theme",
  "private": true,
  "version": "1.0.0",
  "description": "Wikimedia Foundation's primary Wordpress theme",
  "main": "gulpfile.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint:js": "eslint assets/src .config gulpfile.js",
    "lint:php": "composer phpcs:changed",
    "lint": "run-p lint:js lint:php",
    "build": "run-p build:theme",
    "build:theme": "run-s build:webpack build:gulp",
    "build:webpack": "webpack --config=.config/webpack.config.prod.js",
    "build:gulp": "gulp build",
    "start": "run-p start:theme",
    "start:theme": "run-p start:webpack:theme start:gulp",
    "start:webpack:theme": "webpack-dev-server --config=.config/webpack.config.dev.js --config-name=theme",
    "start:webpack:editor": "webpack-dev-server --config=.config/webpack.config.dev.js --config-name=editor",
    "start:gulp": "gulp",
    "download-style-guide-sass": "curl https://raw.githubusercontent.com/wikimedia/wikimedia-ui-base/master/wikimedia-ui-base.less > wikimedia-ui-base.less && npx less2sass wikimedia-ui-base.less && mv wikimedia-ui-base.scss ./assets/src/sass/helpers/_style-guide-variables.scss && rm wikimedia-ui-base.less",
    "make-shiro-frontend-pot": "wp i18n make-pot . languages/shiro.pot --domain=shiro --exclude=assets/dist",
    "make-shiro-admin-pot": "wp i18n make-pot . languages/shiro-admin.pot --domain=shiro-admin --exclude=assets/dist",
    "make-shiro-pot": [
      "@make-shiro-frontend-pot",
      "@make-shiro-admin-pot"
    ],
    "make-themes-mo": "wp i18n make-mo languages",
    "make-themes-json": "wp i18n make-json languages --no-purge",
    "bump:patch": "bump patch --tag --commit 'Prepare v%s release' package.json assets/src/sass/style.scss",
    "bump:minor": "bump minor --tag --commit 'Prepare v%s release' package.json assets/src/sass/style.scss",
    "bump:major": "bump major --tag --commit 'Prepare v%s release' package.json assets/src/sass/style.scss"
  },
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/wikimedia/shiro-wordpress-theme-develop.git"
  },
  "author": "Wikimedia Foundation",
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/wikimedia/shiro-wordpress-theme-develop/issues"
  },
  "homepage": "https://github.com/wikimedia/shiro-wordpress-theme-develop#readme",
  "devDependencies": {
    "@automattic/webpack-rtl-plugin": "^6.0.0",
    "@humanmade/eslint-config": "^1.1.3",
    "@humanmade/webpack-helpers": "^1.0.0-beta.16",
    "@svgr/webpack": "^5.5.0",
    "babel-eslint": "^10.1.0",
    "block-editor-hmr": "^0.6.3",
    "browser-sync": "^2.29.1",
    "classnames": "^2.3.1",
    "copy-webpack-plugin": "^6.4.1",
    "css-mqpacker": "^7.0.0",
    "cssnano": "^4.1.11",
    "eslint": "^7.32.0",
    "eslint-config-react-app": "^3.0.8",
    "eslint-plugin-flowtype": "^3.13.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^29.2.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-sort-destructure-keys": "^1.4.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-deporder": "^1.2.0",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-phpcs": "^3.1.0",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-rev": "^9.0.0",
    "gulp-rtlcss": "^1.4.2",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-strip-debug": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-svg-sprite": "^2.0.3",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.8",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-assets": "^5.0.0",
    "prettier": "npm:wp-prettier@^2.0.5",
    "sass": "^1.56.1",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-order": "^4.1.0",
    "version-bump-prompt": "^6.1.0",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.11.1"
  },
  "dependencies": {
    "@splidejs/splide": "^4.1.4",
    "@wordpress/i18n": "^4.11.0",
    "bootstrap": "^4.6.1",
    "composer": "^4.1.0",
    "graceful-fs": "^4.2.10",
    "gulp-footer": "^2.1.0",
    "jquery": "^3.6.0",
    "lodash": "^4.17.21",
    "minimatch": "^3.1.2",
    "popper.js": "^1.16.1",
    "prop-types": "^15.8.1",
    "stylelint": "^15.10.1"
  },
  "themeConfig": {
    "rename": {
      "prefix": "shiro",
      "text_domain": "shiro",
      "directory": "shiro"
    },
    "bootstrap": false
  }
}
